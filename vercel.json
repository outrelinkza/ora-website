{
  "rewrites": [
    {
      "source": "/privacy-policy",
      "destination": "/privacy.html"
    },
    {
      "source": "/terms-of-service",
      "destination": "/terms.html"
    },
    {
      "source": "/webhook",
      "destination": "/api/webhook"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}

